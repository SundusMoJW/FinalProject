<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="18dp"
    android:background="#ffffff"
    android:clickable="true"
    android:focusable="true"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ResonVisite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/checklist"
            android:text="@string/ResoneVisit"
            android:textColor="@color/black"
            android:textSize="@dimen/titel" />

        <TextView
            android:id="@+id/tvResonVisite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text=" ResonVisite"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/textSize" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="@string/DeadLine"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_agenda"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/titel" />

        <TextView
            android:id="@+id/tvDeadLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="2222222"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/textSize" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="@string/hour"
            android:drawableStart="@drawable/ic_clock"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/titel" />

        <TextView
            android:id="@+id/tvhour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="2222222"
            android:layout_marginBottom="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/textSize" />
    </LinearLayout>
</android.support.v7.widget.CardView>